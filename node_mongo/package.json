  "description": "A book reviews application backed by a MongoDB database.",
  "private": true,
  "scripts": {
    "dev": "nodemon --require ./open-telemetry.js ./bin/www",
    "test": "jest --watchAll",
    "start": "node --require ./open-telemetry.js ./bin/www",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:ci": "cypress run --reporter junit --reporter-options 'mochaFile=results/test-output-[hash].xml,toConsole=true'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jeantessier/book-reviews.git"
  },
  "keywords": [
    "book reviews",
    "mongodb"
  ],
  "author": "Jean Tessier <jean@jeantessier.com> (https://jeantessier.com/)",
  "license": "ISC",
  "dependencies": {
    "@opentelemetry/api": "*",
    "@opentelemetry/auto-instrumentations-node": "*",
    "@opentelemetry/exporter-zipkin": "*",
    "@opentelemetry/sdk-node": "*",
    "@opentelemetry/sdk-trace-node": "*",
    "body-parser": "*",
    "cookie-parser": "*",
    "debug": "*",
    "dotenv": "*",
    "express": "*",
    "express-jwt": "*",
    "jsonwebtoken": "*",
    "mongoose": "*",
    "morgan": "*",
    "passport": "*",
    "passport-local": "*",
    "pug": "*",
    "serve-favicon": "*"
  },
  "devDependencies": {
    "@faker-js/faker": "*",
    "cypress": "*",
    "jest": "*",
    "mongodb-memory-server": "*",
